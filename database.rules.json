{
  "rules": {
    "presence": {
      "$agencyId": {
        "$userId": {
          ".read": "auth != null && root.child('agencies').child($agencyId).child('members').child(auth.uid).exists()",
          ".write": "auth != null && auth.uid === $userId",
          ".validate": "newData.hasChildren(['online', 'lastSeen'])"
        }
      }
    },
    "activity": {
      "$agencyId": {
        ".read": "auth != null && root.child('agencies').child($agencyId).child('members').child(auth.uid).exists()",
        ".write": "auth != null && root.child('agencies').child($agencyId).child('members').child(auth.uid).exists()"
      }
    },
    "collaboration": {
      "$agencyId": {
        "$documentId": {
          ".read": "auth != null && root.child('agencies').child($agencyId).child('members').child(auth.uid).exists()",
          ".write": "auth != null && root.child('agencies').child($agencyId).child('members').child(auth.uid).exists()"
        }
      }
    },
    "backups": {
      "$agencyId": {
        ".read": "auth != null && root.child('agencies').child($agencyId).child('members').child(auth.uid).child('role').val() === 'admin'",
        ".write": false
      }
    }
  }
}

